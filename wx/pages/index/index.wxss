.slide-image{
  width: 98%;
  height: 100%;
  margin-left: 1%
}
/* 导航栏 */
.topBar{
  width: 98%;
  height: 140rpx;
  margin-left: 1%;
  padding-bottom: 3%;
  border-bottom: 1rpx solid #ddd;
}
.topBar-content{
  float: left;
  margin: 2% 7% 0 7%;
}
.topBar-content image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%
}
.topbar-title{
  font-size: 30rpx;
  margin-left: 10%
}

/* 商品栏 */
.goods{
  background-color: #f5f5f5;
  margin-top: 3%;
}
.goods .goods-content{
  display: inline-block;
  width: 47%;
  height: 400rpx;
  margin: 2% 0 2% 2%;
  box-shadow: 1rpx 1rpx 1rpx #888888;
}
.goods .goods-content image{
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx solid #ddd;
}
.goods .goods-content .goods-title{
  font-size: 30rpx; 
  margin-left: 20rpx;
}
.goods .goods-content .goods-price{
  font-size: 25rpx; 
  margin-left: 20rpx;
  color: red;
  float: left;
}
.goods .goods-content .car{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin: 0 10rpx 10rpx 0;
}